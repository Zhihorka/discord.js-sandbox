generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Standup{
  id String @id @default(cuid())
  date DateTime
  speakers Speaker[]
}

model Speaker{
  id String @id @default(cuid())
  name String
  standup Standup @relation(fields: [standupId], references: [id])
  standupId String
  queuePosition Int
  accepted Boolean
  spokeOut Boolean
}